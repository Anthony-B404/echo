meta {
  name: Get My Requests
  type: http
  seq: 3
}

get {
  url: {{baseUrl}}/credit-requests
  body: none
  auth: bearer
}

params:query {
  page: 1
  limit: 20
  ~status: pending
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
  res.body: isJson
}

tests {
  test("should return paginated requests", function() {
    const data = res.getBody();
    expect(data).to.have.property('data');
    expect(data).to.have.property('meta');
    expect(data.data).to.be.an('array');
  });

  test("should return pagination meta", function() {
    const data = res.getBody();
    expect(data.meta).to.have.property('total');
    expect(data.meta).to.have.property('perPage');
    expect(data.meta).to.have.property('currentPage');
    expect(data.meta).to.have.property('lastPage');
  });

  test("requests should have required fields", function() {
    const data = res.getBody();
    if (data.data.length > 0) {
      const request = data.data[0];
      expect(request).to.have.property('id');
      expect(request).to.have.property('type');
      expect(request).to.have.property('amount');
      expect(request).to.have.property('status');
      expect(request).to.have.property('createdAt');
    }
  });
}
