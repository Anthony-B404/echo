meta {
  name: Get Pending Requests (Owner)
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/credit-requests/pending
  body: none
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

assert {
  res.status: eq 200
  res.body: isJson
}

tests {
  test("should return pending requests array", function() {
    const data = res.getBody();
    expect(data).to.have.property('data');
    expect(data.data).to.be.an('array');
  });

  test("all requests should be pending member_to_owner type", function() {
    const data = res.getBody();
    data.data.forEach(function(request) {
      expect(request.status).to.equal('pending');
      expect(request.type).to.equal('member_to_owner');
    });
  });

  test("requests should include requester info", function() {
    const data = res.getBody();
    if (data.data.length > 0) {
      const request = data.data[0];
      expect(request).to.have.property('requester');
      expect(request.requester).to.have.property('id');
      expect(request.requester).to.have.property('email');
    }
  });
}
