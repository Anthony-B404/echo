meta {
  name: Create Request (Member to Owner)
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/credit-requests
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "amount": 100,
    "justification": "Need credits for audio processing"
  }
}

assert {
  res.status: eq 201
  res.body: isJson
}

tests {
  test("should create credit request successfully", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data).to.have.property('request');
  });

  test("should return request with correct data", function() {
    const data = res.getBody();
    expect(data.request).to.have.property('id');
    expect(data.request.amount).to.equal(100);
    expect(data.request.type).to.equal('member_to_owner');
    expect(data.request.status).to.equal('pending');
  });

  test("should include requester info", function() {
    const data = res.getBody();
    expect(data.request).to.have.property('requester');
    expect(data.request.requester).to.have.property('id');
    expect(data.request.requester).to.have.property('email');
  });
}
