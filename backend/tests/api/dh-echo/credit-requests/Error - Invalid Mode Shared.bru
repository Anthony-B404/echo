meta {
  name: Error - Invalid Mode Shared
  type: http
  seq: 11
}

post {
  url: {{baseUrl}}/credit-requests
  body: json
  auth: bearer
}

headers {
  Accept-Language: en
}

auth:bearer {
  token: {{memberTokenSharedMode}}
}

body:json {
  {
    "amount": 50,
    "justification": "This should fail in shared mode"
  }
}

docs {
  Test that credit requests cannot be created when organization is in shared credit mode.

  Prerequisites:
  - User must be a member in an organization with shared credit mode (not individual)

  Expected: 400 Bad Request with code INVALID_MODE
}

assert {
  res.status: eq 400
  res.body: isJson
  res.body.code: eq INVALID_MODE
}

tests {
  test("should return 400 Bad Request", function() {
    expect(res.status).to.equal(400);
  });

  test("should return error code INVALID_MODE", function() {
    const data = res.getBody();
    expect(data).to.have.property('code');
    expect(data.code).to.equal('INVALID_MODE');
  });

  test("should include error message about shared mode", function() {
    const data = res.getBody();
    expect(data).to.have.property('message');
    expect(data.message).to.be.a('string');
  });
}
